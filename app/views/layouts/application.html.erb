<!DOCTYPE html>
<html>
  <head>
    <title>Little Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_count}", "/cart", id: "cart" %>
      
    </nav>

    <% flash.each do |type, message| %>
      <p id = "flash"><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
