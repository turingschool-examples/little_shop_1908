<h1>Write A New Review For <%=link_to @item.name, "/items/#{@item.id}" %></h1>

<center>
  <%= form_tag "/items/#{@item.id}", method: :post do %>

    <%= text_field_tag :title, nil, placeholder: "Title"%>

    <%= text_field_tag :content, nil, placeholder: "Review" %>

    <%= text_field_tag :rating, nil, placeholder: "Rating (Out of 5 Stars)" %>

    <%= submit_tag 'Save Review' %>
  <% end %>
</center>
