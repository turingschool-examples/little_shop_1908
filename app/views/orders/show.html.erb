<h1> Order </h1>
<section id='order-summary'>
  <section id='order-address'>
    <p><%= @order.name %></p>
    <p><%= @order.address %></p>
    <p><%= @order.city %></p>
    <p><%= @order.state %></p>
    <p><%= @order.zip %></p>
  </section>

<% @order.order_details.each do |item, quantity| %>
  <section id="order-<%= item.id%>">
    <p><%= item.name %></p>
    <p><%= item.merchant.name %></p>
    <p>Price: $<%= item.price %></p>
    <p>Quantity: <%= quantity %> </p>
    <p>Subtotal: $<%= item.item_subtotal(quantity) %></p>
  </section>
  <% end %>

<p>Total: $<%= @order.order_total %></p>
<p>Date Ordered: <%= @order.created_at %></p>
</section>
